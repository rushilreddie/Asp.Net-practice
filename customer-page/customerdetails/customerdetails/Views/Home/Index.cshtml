@model customerdetails.Models.Customerform
@{

    ViewData["Title"] = "Home Page";
}

<h1 class="display-4">Customer Form</h1>
@using (Html.BeginForm("GetcustomerData", "Home", FormMethod.Post))
{
    <form action="/action_page.php" id="form">
        @Html.Label("FirstName", "First Name")<br>
        @Html.TextBoxFor(m => m.Fname) <br>

        @Html.Label("LastName", "Last Name")<br>
        @Html.TextBoxFor(m => m.Lname)<br>

        @Html.Label("Address", "Address")<br>
        @Html.TextBoxFor(m => m.Address)<br>

        DateTime: <input class="form-control" asp-for="DateTime" />

        <div class="col-md-10">
            Male
            @Html.RadioButtonFor(model => model.Gender, "Male")
            Female
            @Html.RadioButtonFor(model => model.Gender, "Female")
        </div>

        <button type="submit">Submit</button>
    </form>
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Address</th>
            <th scope="col">Gender</th>
            <th scope="col">Date Time</th>
        </tr>
    </thead>

    @foreach (var Customerform in Model.Fname)
    {

        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>@Model.Fname</td>
                <td>@Model.Lname</td>
                <td>@Model.Address</td>
                <td>@Model.Gender</td>
                <td>@Model.DateTime</td>
            </tr>
        </tbody>

    }
</table>




